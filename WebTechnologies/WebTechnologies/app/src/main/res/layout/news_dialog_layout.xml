<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="12dp"
    android:elevation="4dp"
    android:padding="16dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:paddingTop="20dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:orientation="vertical">
    <!-- First TextView -->
    <TextView
        android:id="@+id/newsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="First TextView"
        android:textSize="18sp"
        android:textColor="#000000" />

    <!-- Second TextView -->
    <TextView
        android:id="@+id/newsDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Second TextView"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginTop="8dp" />

    <!-- Horizontal Line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000000"
        android:layout_marginTop="8dp" />

    <!-- Third TextView -->
    <TextView
        android:id="@+id/newsHeadline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Third TextView"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginTop="8dp" />

    <!-- Fourth TextView -->
    <TextView
        android:id="@+id/newsSummary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fourth TextView"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginTop="8dp" />

    <!-- Linear Layout with Horizontal Orientation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <!-- First ImageView -->
        <ImageView
            android:layout_width="60dp"
            android:id="@+id/chrome"
            android:layout_height="60dp"
            android:src="@drawable/chrome"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:layout_marginEnd="8dp"/>

        <!-- Second ImageView -->
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/twitter"
            android:src="@drawable/twitter_x_icon"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:layout_marginEnd="8dp"/>

        <!-- Third ImageView -->
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/facebook"
            android:src="@drawable/facebook"
            android:layout_weight="1"
            android:scaleType="centerInside"/>

    </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
